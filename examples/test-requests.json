  "error_test_cases": [
    {
      "name": "Invalid Task Type",
      "description": "Test error handling for invalid task type",
      "request": {
        "input": {
          "task_type": "invalid_type",
          "duration": 10,
          "user_input": "This should fail"
        }
      },
      "expected_error": "validation_error"
    },
    {
      "name": "Duration Too Long",
      "description": "Test duration validation",
      "request": {
        "input": {
          "task_type": "text_processing",
          "duration": 100,
          "user_input": "Duration exceeds 45 second limit"
        }
      },
      "expected_error": "validation_error"
    },
    {
      "name": "Duration Too Short",
      "description": "Test minimum duration validation", 
      "request": {
        "input": {
          "task_type": "text_processing",
          "duration": 2,
          "user_input": "Duration below 5 second minimum"
        }
      },
      "expected_error": "validation_error"
    },
    {
      "name": "Missing Input",
      "description": "Test handling of missing input object",
      "request": {},
      "expected_error": "validation_error"
    }
  ],
  
  "performance_tests": [
    {
      "name": "Cold Start Test",
      "description": "Test cold start performance",
      "request": {
        "input": {
          "task_type": "text_processing",
          "duration": 5,
          "user_input": "Cold start performance test"
        }
      },
      "notes": "Measure time from request to first progress update"
    },
    {
      "name": "Warm Worker Test",
      "description": "Test performance with warm workers",
      "sequential_requests": [
        {
          "input": {
            "task_type": "text_processing",
            "duration": 8,
            "user_input": "First request to warm up worker"
          }
        },
        {
          "input": {
            "task_type": "text_processing", 
            "duration": 8,
            "user_input": "Second request on warm worker"
          }
        }
      ],
      "notes": "Second request should be faster (no cold start)"
    }
  ],
  
  "webhook_tests": [
